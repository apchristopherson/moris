#ifndef PROJECTS_MRS_COR_SRC_PATHS_HPP_
#define PROJECTS_MRS_COR_SRC_PATHS_HPP_

#include <string>

namespace moris
{

    // ge the library path
    inline
    std::string
    get_base_moris_dir()
    {
        return "@PROJECT_SOURCE_DIR@/";
    }

    // get the build direct
    inline
    std::string
    get_moris_bin_dir()
    {
        return "@CMAKE_BINARY_DIR@";
    }

    inline
    std::string
    get_moris_git_branch()
    {
        return "@MORIS_GIT_BRANCH@";
    }

    inline
    std::string
    get_moris_git_hash()
    {
        return "@MORIS_GIT_HASH@";
    }
}
#endif /* PROJECTS_MRS_COR_SRC_PATHS_HPP_ */
